
<%= r_page_wrapper do %>
  <%= r_page_header_wrapper do %>
    <%= r_breadcrumbs do %>
      <%= r_mobile_breadcrumbs_nav @artist %>
      <%= r_breadcrumbs_nav do %>
        <%= r_home_breadcrumbs_link root_url %>
        <%= r_breadcrumbs_separator %>
        <%= r_breadcrumbs_link artists_url do %>
          Artists
        <% end %>
        <%= r_breadcrumbs_separator %>
        <%= r_breadcrumbs_link @artist do %>
          <%= @artist %>
        <% end %>
        <%= r_breadcrumbs_separator %>
        <%= r_breadcrumbs_link edit_artist_url(@artist) do %>
          Edit
        <% end %>
      <% end %>
    <% end %>
    <%= r_page_header_body do %>
      <%= r_page_header_title "Editing #{@artist}" %>
    <% end %>
  <% end %>

  <%= render 'form', artist: @artist %>
<% end %>
