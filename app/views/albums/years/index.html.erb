<%= r_page_wrapper do %>
  <%= r_page_header do %>
    <%= r_breadcrumbs do %>
      <%= r_mobile_breadcrumbs_nav @album %>
      <%= r_breadcrumbs_nav do %>
        <%= r_home_breadcrumbs_link root_url %>
        <%= r_breadcrumbs_separator %>
        <%= r_breadcrumbs_link albums_url do %>
          Albums
        <% end %>
        <%= r_breadcrumbs_separator %>
        <%= r_breadcrumbs_link albums_years_url do %>
          By Year
        <% end %>
      <% end %>
    <% end %>
    <%= r_page_header_body do %>
      <%= r_page_header_title "Albums", "By Year" %>
    <% end %>
  <% end %>

  <%= r_table do %>
    <thead>
      <%= r_table_header_row do %>
        <%= r_primary_table_header_cell do %>
          Year
        <% end %>
        <%= r_table_header_cell do %>
          Albums
        <% end %>
        <%= r_actions_table_header_cell %>
      <% end %>
    </thead>
    <tbody>
      <% @years.each_with_index do |year, index| %>
        <%= r_table_row(index) do %>
          <%= r_primary_table_cell albums_year_path(year.first) do %>
            <%= year.first %>
          <% end %>
          <%= r_table_cell do %>
            <%= pluralize(year.last, "Album") %>
          <% end %>
          <%= r_actions_table_cell do %>
            <%= r_table_cell_action "Show", albums_year_path(year.first) %>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
<% end %>
