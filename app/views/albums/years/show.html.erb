<%= r_page_wrapper do %>
  <%= r_page_header "Albums from #{@year}" %>

  <%= r_table_wrapper do %>
    <%= render "albums/albums", albums: @albums %>
    <%= r_pagination_wrapper do %>
      <%= r_previous_nav_button @previous_year, @previous_year && albums_year_path(@previous_year) %>
      <%= r_nav_link "Index", albums_years_path %>
      <%= r_next_nav_button @next_year, @next_year && albums_year_path(@next_year) %>
    <% end %>
  <% end %>
<% end %>
