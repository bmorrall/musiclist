<div class="px-3 py-4 md:px-6 md:py-4">
  <p class="text-4xl leading-tight"><%= @album.title %> <% if @album.year.present? %>(<%= @album.year %>)<% end %></p>
  <p class="text-xl leading-tight text-gray-600">
    <%= @album.artist.try(:name) %>
    <% if @album.genre? -%>
    &ndash; <%= @album.genre %>
    <% end -%>
  </p>
</div>
<div class="md:flex md:items-start px-3 pb-2 md:px-6 md:pb-4">
  <div class="block md:mx-0 flex flex-col flex-shrink-0">
    <%= image_tag album_detail_image(@album), class: "block mx-auto flex-shrink-0 h-64 sm:w-64", alt: @album.title %>
  </div>
  <div class="mt-2 md:mt-0 md:ml-4 text-left">
    <% if @album.description? %>
    <%= album_simple_format(@album.description) %>
    <% end %>
  </div>
</div>

<div class="px-3 py-2 md:px-6 mdpy-4">
  <% if policy(@album).edit? -%>
  <%= link_to 'Edit', edit_album_path(@album) %> |
  <% end -%>
  <% if policy(@album).refresh? -%>
  <%= link_to 'Refresh', album_refresh_path(@album) %> |
  <% end -%>
  <%= link_to 'Back', albums_path %>
</div>
